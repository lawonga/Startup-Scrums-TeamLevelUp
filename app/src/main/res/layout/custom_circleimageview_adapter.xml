        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mentor_profile_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
